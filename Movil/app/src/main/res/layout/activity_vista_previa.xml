<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5BDC1"
    android:backgroundTint="#B5BDC1"
    tools:context=".vista_previa">

    <Button
        android:id="@+id/btnvistaPrevia"
        android:layout_width="210dp"
        android:layout_height="200dp"
        android:backgroundTint="#37474F"
        android:fontFamily="@font/titillium_web_bold"
        android:text="Productos Caducados"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/hourglass_half_regular"
        app:iconGravity="textTop"
        app:iconSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <Button
        android:id="@+id/button6"
        android:layout_width="210dp"
        android:layout_height="200dp"
        android:backgroundTint="#37474F"
        android:fontFamily="@font/titillium_web_bold"
        android:text="Productos a Caducados"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/box_open_solid"
        app:iconGravity="textTop"
        app:iconSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.549" />

    <Button
        android:id="@+id/button7"
        android:layout_width="210dp"
        android:layout_height="200dp"
        android:backgroundTint="#37474F"
        android:fontFamily="@font/titillium_web_bold"
        android:text="Bajo Stock"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/triangle_exclamation_solid"
        app:iconGravity="textTop"
        app:iconSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#37474F"
        android:backgroundTint="#37474F"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/recuperar"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#37474F"
            android:onClick="volver"
            app:icon="@drawable/bars_solid"
            app:iconSize="30dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="237dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="277dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/titillium_web_semibold"
                android:text="Vista Previa"
                android:textColor="#FFFFFF"
                android:textSize="35dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>