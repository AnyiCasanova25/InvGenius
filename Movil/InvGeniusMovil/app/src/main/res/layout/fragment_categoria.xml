<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4CFD8DC"
    tools:context=".ui.categoria.CategoriaFragment">

    <!-- Lacteos -->

    <LinearLayout
        android:id="@+id/barrabusqueda4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:text="Buscar..." />

        <Button
            android:id="@+id/button7"
            android:layout_width="15dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:backgroundTint="@color/novedadicon"
            android:gravity="center"
            app:icon="@drawable/magnifying_glass"
            app:iconSize="20dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="15dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:backgroundTint="@color/novedadicon"
            app:icon="@drawable/plus"
            app:iconSize="20dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_lacteos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:background="#78909C"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="#3E5059"
            app:srcCompat="@drawable/lacteos" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Tablas"
            android:fontFamily="@font/titillium_web_bold"
            android:text="Lacteos"
            android:textAlignment="center"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/eye"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/pen_to_square_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/ban_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Carnes -->
    <LinearLayout
        android:id="@+id/category_carnes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:background="#78909C"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3"
        tools:layout_editor_absoluteX="141dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="#3E5059"
            app:srcCompat="@drawable/carnes" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Tablas"
            android:fontFamily="@font/titillium_web_bold"
            android:text="Carnes"
            android:textAlignment="center"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/eye"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/pen_to_square_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/ban_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Granos -->
    <LinearLayout
        android:id="@+id/category_granos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="#78909C"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_lacteos"
        app:layout_constraintWidth_percent="0.3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="#3E5059"
            app:srcCompat="@drawable/granos" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Tablas"
            android:fontFamily="@font/titillium_web_bold"
            android:text="Granos"
            android:textAlignment="center"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/eye"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/pen_to_square_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/ban_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Verduras -->
    <LinearLayout
        android:id="@+id/category_verduras"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#78909C"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/category_granos"
        app:layout_constraintTop_toBottomOf="@+id/category_carnes"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="#3E5059"
            app:srcCompat="@drawable/verduras" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Tablas"
            android:fontFamily="@font/titillium_web_bold"
            android:text="Verduras"
            android:textAlignment="center"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/eye"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button23"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/pen_to_square_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/ban_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Frutas -->
    <LinearLayout
        android:id="@+id/category_frutas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="#78909C"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_granos"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="#3E5059"
            app:srcCompat="@drawable/frutas" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Tablas"
            android:fontFamily="@font/titillium_web_bold"
            android:text="Frutas"
            android:textAlignment="center"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/eye"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button26"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/pen_to_square_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:icon="@drawable/ban_solid"
                app:iconGravity="textTop"
                app:iconSize="20dp" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/text_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>